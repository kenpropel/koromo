#!/usr/bin/env ruby
require 'kajiki'
require 'koromo'

opts = Kajiki.preset_options(:server, {config: true})

Kajiki.run(opts) do |cmd|
  case cmd
  when 'start'
    Koromo::Config.load_config(opts[:config]) if opts[:config]
    Koromo.logger.warn('Koromo server starting...')
    Koromo::Server.run!({bind: opts[:address], port: opts[:port]})
  end
end
